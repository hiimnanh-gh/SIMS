@{
    ViewData["Title"] = "Home Page";
    var roleId = ViewBag.RoleID as int?;
}

<h2>Chào mừng đến hệ thống SIMS</h2>

@if (roleId == 1)  // Admin
{
    <div style="color: red;">
        <h3>Giao diện cho Admin</h3>
        <p>Quản lý người dùng, báo cáo hệ thống, v.v...</p>
    </div>
}
else if (roleId == 2) // Student
{
    <div style="color: green;">
        <h3>Giao diện cho Sinh viên</h3>
        <p>Xem điểm, đăng ký môn học, v.v...</p>
    </div>
}
else if (roleId == 3) // Teacher
{
    <div style="color: blue;">
        <h3>Giao diện cho Giáo viên</h3>
        <p>Quản lý lớp học, nhập điểm, v.v...</p>
    </div>
}
else
{
    <div>
        <p>Không xác định quyền truy cập.</p>
    </div>
}
